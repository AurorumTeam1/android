<?xml version="1.0" encoding="utf-8"?>
<org.domain.mobile.android.mymapview.AreaDetailsEditView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/details_edit_overlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/edit_overlay_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="12dip"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:visibility="visible" >

        <EditText
            android:id="@+id/area_details_name_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:text="@string/area_default_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_dark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/area_details_owner_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="0dp"
            android:inputType="text"
            android:maxLines="1"
            android:padding="12dp"
            android:text="@string/area_default_owner"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/area_details_description_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="10"
        android:padding="12dp"
        android:text="@string/area_default_description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_dark" />

    <Spinner
        android:id="@+id/color_spinner"
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/color_array"
        android:prompt="@string/color_prompt" />

</org.domain.mobile.android.mymapview.AreaDetailsEditView>